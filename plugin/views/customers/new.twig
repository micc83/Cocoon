{% extends "/layouts/main.twig" %}

{% block title %}New customer{% endblock %}

{% block head %}
  {{ parent() }}

{% endblock %}

{% block content %}

  <h1>Create new customer</h1>

  {% if infos|length > 0 %}
    <ul>
    {% for info in infos %}
      <li>{{ info }}</li>
    {% endfor %}
    </ul>
  {% endif %}

  {% if errors|length > 0 %}
    <ul>
    {% for error in errors %}
      <li>{{ error }}</li>
    {% endfor %}
    </ul>
  {% endif %}

  <p>Create a new customer:</p>

  {% include 'customers/form.twig' %}

{% endblock %}